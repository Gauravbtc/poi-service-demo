{
  "openapi": "3.0.0",
  "info": {
    "title": "POI Service API Documentation",
    "description": "Detailed explanation of ElasticSearch API",
    "version": "0.1.9"
  },
  "schemes": [
    "http"
  ],
  "servers": [
    {
      "url": "http://localhost:3000/"
    }
  ],
  "paths": {
    "/api/v1/locations": {
      "post": {
        "summary": "Creates a user.",
        "parameters": [
          {
            "in": "header",
            "name": "auth_token",
            "schema": {
              "type": "string"
            },
            "required": true
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "address": {
                    "type": "string"
                  },
                  "user_id": {
                    "type": "1"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created"
          }
        }
      }
    },
    "/api/v1/users/sign_in": {
       "$ref": "user/user_path.json#/UserLogin"
    },
    "/api/v1/users/sign_out": {
      "$ref": "user/user_path.json#/UserLogout"
    },
    "/api/v1/locations": {
      "$ref": "location/location_path.json#/LocationList"
    },
    "/api/v1/locations": {
      "$ref": "location/location_path.json#/LocationShow"
    }
  }
}

